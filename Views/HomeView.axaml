<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="cross.HomeView">
    <Border Background="#F3F4F6" Padding="20">
        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
                <!-- 原有标题 -->
                <TextBlock Text="首页" 
                           FontSize="32" 
                           Foreground="#1F2937"
                           FontFamily="{StaticResource EmbeddedYaHei}"/>
                
                <!-- 新增通讯方式选择框 -->
                <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                    <TextBlock Text="通讯方式：" 
                               FontSize="20" 
                               Foreground="#1F2937"
                               FontFamily="{StaticResource EmbeddedYaHei}"
                               VerticalAlignment="Center"/>
                    <ComboBox x:Name="CommTypeComboBox"
                              Width="200"
                              FontSize="18"
                              FontFamily="{StaticResource EmbeddedYaHei}"
                              SelectionChanged="CommTypeComboBox_SelectionChanged">
                        <!-- 三个通讯选项 -->
                        <ComboBoxItem Content="串口"/>
                        <ComboBoxItem Content="以太网"/>
                        <ComboBoxItem Content="CAN"/>
                    </ComboBox>
                </StackPanel>
                
                <TextBlock Text="选择后点击「数据管理」查看对应页面" 
                           FontSize="16" 
                           Foreground="#6B7280"
                           FontFamily="{StaticResource EmbeddedYaHei}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
