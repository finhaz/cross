<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="cross.SettingsView">
      <Grid Background="#F3F4F6" >
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15">
            <TextBlock Text="系统设置页面" FontSize="28" Foreground="#1F2937"/>
            <CheckBox Content="开启自动保存" FontSize="16" Margin="0 10 0 0"/>
            <CheckBox Content="暗黑模式" FontSize="16" Margin="0 10 0 0"/>
            <TextBox Watermark="请输入API地址" Width="300" Margin="0 10 0 0"/>
            <Button Content="保存设置" Width="100" Margin="0 20 0 0"/>
        </StackPanel>
    </Grid>
</UserControl>
